{
	"env": {
		"es6": true,
		"node": true
	},
	"parser": "@typescript-eslint/parser",
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
  "plugins": [
    "@typescript-eslint",
  ],
	"rules": {
		"indent": ["warn", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-undef": "error",
		"no-duplicate-imports": "error",
		"no-else-return": "error",
		"no-multi-spaces": "error"
	}
}
