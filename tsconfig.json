{
  "compilerOptions": {
    "target": "ES2015",
    "moduleResolution": "Node",
    "allowJs": true,
    "noEmit": false,
    "strict": false,
		"noImplicitThis": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@commands": ["./commands/index.js"],
      "@commands/*": ["./commands/*"],
      "@extra/*": ["./extra/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
